{
    "manifest_version": 3,
    "name": "AutoTrading",
    "description": "AutoTrading",
    "version": "1.0",
    "action": {
        "default_popup": "page/config.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "scripts/backgrounds/main.js",
        "type": "module",
        "matches": [
            "*://www.okx.com/*/trade-swap/doge-usdt-swap"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "scripts/contents/base.js",
                "scripts/contents/data.js",
                "scripts/contents/gesture.js",
                "scripts/contents/person.js",
                "scripts/contents/strategyV1.js",
                "scripts/contents/main.js"
            ],
            "matches": [
                "*://www.okx.com/*/trade-swap/doge-usdt-swap"
            ],
            "run_at": "document_idle",
            "world": "ISOLATED",
            "type": "module"
        }
    ]
}